<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Component" parent="AppTheme.Default" />

    <style name="Component.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/Text.Headline5</item>
        <item name="subtitleTextAppearance">@style/Text.Caption</item>
        <item name="subtitleTextColor">?attr/colorOnSurface70</item>
    </style>

    <style name="Component.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?attr/colorOnSurface12</item>
        <item name="strokeWidth">@dimen/space_xxsmall</item>
    </style>

    <style name="Component.Card.Button">
        <item name="rippleColor">@color/color_button_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Component.CompoundButton" parent="Text.Caption">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:button">@null</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingEnd">@dimen/space_regular</item>
    </style>

    <style name="Component.CompoundButton.Checkbox">
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="Component.CompoundButton.Radio">
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorSingle</item>
    </style>

    <style name="Component.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorSingle</item>
        <item name="tabTextAppearance">@style/Text.Overline</item>
    </style>

    <style name="Component.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorBackground</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Component.AlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Text.Body1</item>
        <item name="buttonBarPositiveButtonStyle">@style/Component.AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Component.AlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Component.AlertDialog.Button</item>
    </style>

    <style name="Component.AlertDialog.Title" parent="Text.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Component.AlertDialog.Button" parent="Button.Tertiary">
        <item name="android:layout_marginStart">@dimen/space_regular</item>
    </style>

</resources>

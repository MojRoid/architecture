<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/TesterFragment">

    <fragment
        android:id="@+id/TesterFragment"
        android:name="com.example.feature.tester.view.TesterFragment"
        tools:layout="@layout/fragment_tester">

        <action
            android:id="@+id/TesterFragment_to_MainActivity"
            app:destination="@id/MainActivity" />

        <action
            android:id="@+id/TesterFragment_to_TypographyFragment"
            app:destination="@id/TypographyFragment" />

    </fragment>

    <activity
        android:id="@+id/MainActivity"
        android:name="com.example.feature.main.view.MainActivity"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/TypographyFragment"
        android:name="com.example.feature.tester.view.TypographyFragment"
        tools:layout="@layout/fragment_typography" />

</navigation>
